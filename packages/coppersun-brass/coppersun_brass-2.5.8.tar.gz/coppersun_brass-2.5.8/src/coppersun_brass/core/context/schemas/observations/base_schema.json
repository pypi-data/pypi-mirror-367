{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://devmind.ai/schemas/observation/base",
    "title": "Base Observation Schema",
    "description": "Base schema for all DevMind observations",
    "type": "object",
    "required": ["id", "type", "source_agent", "timestamp", "data"],
    "properties": {
        "id": {
            "type": "string",
            "description": "Unique identifier for the observation",
            "pattern": "^[a-zA-Z0-9_/-]+$"
        },
        "type": {
            "type": "string",
            "description": "Type of observation",
            "minLength": 1,
            "maxLength": 64
        },
        "source_agent": {
            "type": "string",
            "description": "Agent that created this observation",
            "enum": ["watch", "scout", "strategist", "planner", "unknown"]
        },
        "timestamp": {
            "type": "number",
            "description": "Unix timestamp when observation was created",
            "minimum": 0
        },
        "data": {
            "type": "object",
            "description": "Observation-specific data",
            "additionalProperties": true
        },
        "metadata": {
            "type": "object",
            "description": "Additional metadata",
            "properties": {
                "confidence": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1
                },
                "severity": {
                    "type": "string",
                    "enum": ["low", "medium", "high", "critical"]
                },
                "priority": {
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 100
                },
                "tags": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "uniqueItems": true
                },
                "source_file": {
                    "type": "string"
                },
                "line_number": {
                    "type": "integer",
                    "minimum": 1
                }
            },
            "additionalProperties": true
        }
    },
    "additionalProperties": false
}