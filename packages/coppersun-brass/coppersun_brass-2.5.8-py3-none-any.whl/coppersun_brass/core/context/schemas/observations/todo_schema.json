{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://devmind.ai/schemas/observation/todo",
    "title": "TODO Observation Schema",
    "description": "Schema for TODO/FIXME/HACK observations",
    "allOf": [
        {
            "$ref": "base_schema.json"
        },
        {
            "type": "object",
            "properties": {
                "type": {
                    "const": "todo"
                },
                "data": {
                    "type": "object",
                    "required": ["text", "file", "line"],
                    "properties": {
                        "text": {
                            "type": "string",
                            "description": "The TODO comment text",
                            "minLength": 1
                        },
                        "file": {
                            "type": "string",
                            "description": "File containing the TODO"
                        },
                        "line": {
                            "type": "integer",
                            "description": "Line number of the TODO",
                            "minimum": 1
                        },
                        "category": {
                            "type": "string",
                            "enum": ["TODO", "FIXME", "HACK", "NOTE", "XXX", "BUG", "REFACTOR"]
                        },
                        "researchable": {
                            "type": "boolean",
                            "description": "Whether this TODO needs research"
                        },
                        "assignee": {
                            "type": "string",
                            "description": "Person assigned to this TODO"
                        }
                    }
                },
                "metadata": {
                    "type": "object",
                    "properties": {
                        "priority": {
                            "type": "integer",
                            "minimum": 0,
                            "maximum": 100,
                            "description": "Calculated priority based on keywords"
                        },
                        "has_date": {
                            "type": "boolean"
                        },
                        "due_date": {
                            "type": "string",
                            "format": "date"
                        }
                    }
                }
            }
        }
    ]
}