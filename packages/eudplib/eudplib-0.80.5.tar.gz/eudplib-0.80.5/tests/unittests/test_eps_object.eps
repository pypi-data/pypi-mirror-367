object Test {
    var x, y, z;
    function setX(x) { this.x = x; }
    function add(other: selftype) {
        this.x += other.x;
        this.y += other.y;
        this.z += other.z;
    }
};
function test_object() {
    const a = Test();
    a.x, a.y = 5, 7;

    const b = Test.cast(a);
    const c = Test.cast(b);

    b.z = 8;
    c.x = 3;

    // object can be converted to a condition
    var ret = a ? 1 : 0;
    if (a.x == b.x && b.x == c.x) ret += 2;
    if (a.y == b.y && b.y == c.y) ret += 4;
    if (a.z == b.z && b.z == c.z) ret += 8;
    if (a.x == 3 && b.y == 7 && c.z == 8) ret += 16;

    const d = a.copy();
    a.add(d);
    if (c.x == 6 && a.y == 14 && b.z == 16) ret += 32;
    if (d.x == 3 && d.y == 7 && d.z == 8) ret += 64;

    var e = a;
    Test.cast(e).setX(1);
    if (a.x == 1) ret += 128;
    Test.cast(e).add(d);
    if (b.x == 4 && c.y == 21 && a.z == 24) ret += 256;

    return ret;  // 511
}

object Triangle;
object Coord { var x, y; };
object Triangle {
    var p: Coord * 5;
    var q;
};

function test_nested_object() {
    const a = Triangle();
    a.p = (Coord * 5)();
    foreach(i : py_range(5)) {
        a.p[i] = Coord();
    }

    a.p[0].x = 1;
    a.p[1].y = 2;
    a.p[1].y += 2;
    a.q = 3;

    var ret = list(a.p[0].x == 1, a.p[0].y == 0, a.p[1].y == 4, a.q == 3) ? 1 : 0;

    const b = a.copy();
    b.p[0].x = 5;
    b.q = 2;
    if (a.p[0].x == 5) ret += 2;
    if (b.p[0].x == 5) ret += 4;
    if (b.p[0].y == 0) ret += 8;
    if (b.p[1].y == 4) ret += 16;
    if (a.q == 3) ret += 32;
    if (b.q == 2) ret += 64;

    return ret;
}

var ListCount = 0;
object List {
    var prev: selftype, next: selftype;
    function constructor() {
        ListCount += 1;
    }
    function foo(c: Coord) {}
};
function test_selftype_member() {
    const a, b = List(), List();
    a.prev = b;
    a.next = b;
    b.prev = a;
    b.next = a;
    a.foo(0);
    const c = List();
    const d = List();
    const e = List();

    return ListCount;
}

object RandomData {
    var arr: EUDArray;
    var count;

    function constructor(arr, count) {
        this.arr = arr;
        this.count = count;
    }

    function get_value() {
        return this.arr[dwrand() % this.count];
    }
};
function test_eudmethods() {
    const rd = RandomData(EUDArray(list(1,2,3,4,5,6,7)), 7);
    var ret = 0;
    foreach(n : py_range(7)) {
        const v = rd.get_value();
        if (1 <= v && v <= 7) ret += 1;
    }
    return ret;
}
