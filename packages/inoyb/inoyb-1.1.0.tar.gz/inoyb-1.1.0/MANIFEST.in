# Include the README and license files
include README.md
include LICENSE
include requirements.txt

# Include static files
recursive-include inoyb/static *
recursive-include inoyb/templates *

# Include configuration templates
include inoyb/config/templates/*.json

# Exclude development and testing files
exclude .gitignore
exclude .github
exclude tox.ini
exclude pytest.ini
exclude .coverage
exclude .pytest_cache
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * *.orig
recursive-exclude * *.rej
recursive-exclude * *~
recursive-exclude * .DS_Store

# Exclude test files
recursive-exclude tests *
recursive-exclude test_* *

# Exclude example files that shouldn't be in the package
exclude gogogo.py
exclude mc.json
recursive-exclude examples *
recursive-exclude model *
recursive-exclude outputs *
recursive-exclude workspace_* *

# Exclude build artifacts
recursive-exclude build *
recursive-exclude dist *
recursive-exclude *.egg-info *