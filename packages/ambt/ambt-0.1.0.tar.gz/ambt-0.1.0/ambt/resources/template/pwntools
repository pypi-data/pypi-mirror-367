exe = ELF("<BINARY>")<libc>
libc = ELF("<LIBC>")</libc>

context.binary = exe
context.terminal = "kitty -e sh -c".split()
context.log_level = "DEBUG"
#context.aslr = False

global io
breakpoints = '''
break main
'''+"continue\n"*1

<remote>host, port = "<HOST>",<PORT>

if len(sys.argv) > 1 and sys.argv[1] == "-r":
    io = remote(host,port)
el</remote>if len(sys.argv) > 1 and sys.argv[1] == "-ng":
    io = process(exe.path)
else:
    io = gdb.debug(exe.path, gdbscript=breakpoints)
    
AmbtTube(io)

shell()
