export PATH := ../bin:$(PATH)

all: alltests

status: 
	cat */*.status

alltests: 
	$(MAKE) images.status
	$(MAKE) compare.status
	$(MAKE) montage.status

montage.status:
	( montageimages.sh && \
		echo Montage succeeded > $@ || \
		echo Montage error: $$? > $@ ) 
images.status:
	( makeimages.sh && \
		echo makeimages.sh succeeded > $@ || \
		echo makeimages.sh error: $$? > $@ ) 
compare.status:
	( compareimages.sh && \
		echo `pwd`: compareimages.sh succeeded > $@ || \
		echo `pwd`: compareimages.sh error: $$? > $@ ) 
false.status:
	( /bin/false && \
		echo /bin/false succeeded > $@ || \
		echo /bin/false error: $$? > $@ ) | tee false.log
test:
	echo $(CURDIR)
	echo $(PATH)
clean:
	rm -f *.status
	rm -rf montage diff

baseline%:
	makeimages.sh $@
