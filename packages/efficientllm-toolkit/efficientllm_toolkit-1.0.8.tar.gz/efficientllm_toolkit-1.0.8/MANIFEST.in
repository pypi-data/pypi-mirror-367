include README.md
include LICENSE
include requirements*.txt
include *.py
include *.toml
include *.cfg

# Include efficientllm package only
recursive-include efficientllm *.py

# Exclude everything else - data will be downloaded via git clone
global-exclude quantization/*
global-exclude fine-tune/*
global-exclude pretrain/*
global-exclude scripts/*
global-exclude checkpoints/*

# Exclude large binary files, model files, and cached data
global-exclude *.pkl
global-exclude *.bin
global-exclude *.safetensors
global-exclude *.pt
global-exclude *.pth
global-exclude *.model
global-exclude *.ckpt
global-exclude *.pyc
global-exclude __pycache__
global-exclude *.so
global-exclude .git*
global-exclude .DS_Store
global-exclude *.egg-info
global-exclude *.whl
global-exclude *.tar.gz