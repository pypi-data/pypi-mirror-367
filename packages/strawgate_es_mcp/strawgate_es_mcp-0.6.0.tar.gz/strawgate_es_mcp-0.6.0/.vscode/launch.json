    "version": "0.2.0",
    "configurations": [
    
        {
            "name": "Python Debugger: Module",
            "type": "debugpy",
            "request": "launch",
            "module": "strawgate_es_mcp.main",
            "args": []
        },
        {
            "name": "Python Debugger: Module SSE",
            "type": "debugpy",
            "request": "launch",
            "module": "strawgate_es_mcp.main",
            "args": ["--transport", "sse"]
        },
        // Debug Tests config
        {
            "name": "Python: Debug Tests",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "purpose": [
                "debug-test"
            ],
            "args": [
                "-vv",
                "-s" // Disable Captures
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
    ]
}