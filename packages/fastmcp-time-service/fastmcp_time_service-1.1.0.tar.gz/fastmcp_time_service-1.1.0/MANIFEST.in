# 包含额外的文件到分发包中
include README.md
include requirements.txt
include config.json
include LICENSE
include *.txt
include *.md
include *.json

# 排除不需要的文件
exclude .gitignore
exclude .env
exclude .env.*
exclude *.pyc
exclude __pycache__/
exclude .pytest_cache/
exclude .coverage
exclude .DS_Store

# 排除虚拟环境目录
exclude venv/
exclude new_venv/
exclude env/
exclude .venv/

# 排除图片文件（除非确实需要）
exclude *.png
exclude *.jpg
exclude *.jpeg
exclude *.gif

# 递归排除
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * .DS_Store