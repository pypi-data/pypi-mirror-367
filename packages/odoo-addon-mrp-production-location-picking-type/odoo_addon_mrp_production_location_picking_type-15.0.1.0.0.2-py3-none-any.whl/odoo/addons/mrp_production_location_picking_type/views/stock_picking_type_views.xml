<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_picking_type_form_production_location" model="ir.ui.view">
        <field name="name">stock.picking.type.form.production.location</field>
        <field name="model">stock.picking.type</field>
        <field name="inherit_id" ref="stock.view_picking_type_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='default_location_dest_id']" position="after">
                <field
                    name="production_location_id"
                    attrs="{'invisible': [('code', '!=', 'mrp_operation')]}"
                />
            </xpath>
        </field>
    </record>
</odoo>
