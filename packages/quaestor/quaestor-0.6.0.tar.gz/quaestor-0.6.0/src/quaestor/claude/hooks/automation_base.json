{
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "{python_path} {hooks_dir}/rule_injection.py",
            "description": "Enforce rules based on request context"
          },
          {
            "type": "command",
            "command": "{python_path} {hooks_dir}/user_prompt_submit.py",
            "description": "Detect mode and provide appropriate feedback"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "{python_path} {hooks_dir}/compliance_pre_edit.py",
            "description": "Enforce Quaestor compliance rules before edits"
          }
        ]
      },
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "{python_path} {hooks_dir}/spec_lifecycle.py",
            "description": "Auto-activate specs when implementation starts"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "{python_path} {hooks_dir}/spec_tracker.py",
            "description": "Track specification progress and suggest agents"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "{python_path} {hooks_dir}/rule_injection.py",
            "description": "Inject critical rules and context"
          },
          {
            "type": "command",
            "command": "{python_path} {hooks_dir}/session_context_loader.py",
            "description": "Load project context and suggest agents at session start"
          }
        ]
      }
    ]
  }
}