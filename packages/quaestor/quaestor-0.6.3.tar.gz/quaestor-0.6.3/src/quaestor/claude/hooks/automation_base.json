{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "{python_path} {hooks_dir}/session_context_loader.py",
            "description": "Load active specifications into session context"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "TodoWrite",
        "hooks": [
          {
            "type": "command",
            "command": "{python_path} {hooks_dir}/todo_spec_progress.py",
            "description": "Update specification progress when TODOs are completed"
          }
        ]
      }
    ]
  }
}