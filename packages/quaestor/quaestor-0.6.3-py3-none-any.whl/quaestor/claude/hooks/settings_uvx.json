{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uvx --from quaestor quaestor hook session-context-loader",
            "description": "Load active specifications into session context"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "TodoWrite",
        "hooks": [
          {
            "type": "command",
            "command": "uvx --from quaestor quaestor hook todo-spec-progress",
            "description": "Update specification progress when TODOs are completed"
          }
        ]
      },
      {
        "matcher": "Write",
        "path_filter": ".*\\.quaestor/specs/.*\\.yaml$",
        "hooks": [
          {
            "type": "command",
            "command": "uvx --from quaestor quaestor hook validate-spec ${file_path}",
            "description": "Validate specification files after writing",
            "block_on_failure": true
          }
        ]
      }
    ]
  }
}