{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "MultimeterConfig",
    "type": "object",
    "properties": {
        "manufacturer": {
            "type": "string"
        },
        "model": {
            "type": "string"
        },
        "device_type": {
            "type": "string",
            "enum": ["multimeter"]
        },
        "serial_number": {
            "type": "string"
        },
        "resolution": {
            "type": "number",
            "description": "Basic measurement resolution in digits"
        },
        "max_voltage": {
            "type": "number",
            "description": "Maximum measurable voltage in volts"
        },
        "max_resistance": {
            "type": "number",
            "description": "Maximum measurable resistance in ohms"
        },
        "max_current": {
            "type": "number",
            "description": "Maximum measurable current in amperes"
        },
        "max_capacitance": {
            "type": "number",
            "description": "Maximum measurable capacitance in farads"
        },
        "max_frequency": {
            "type": "number",
            "description": "Maximum measurable frequency in hertz"
        },
        "configuration": {
            "type": "object",
            "properties": {
                "current": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "Supported current measurement configurations"
                },
                "voltage": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "Supported voltage measurement configurations"
                },
                "resolution": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "Supported resolution settings"
                }
            },
            "required": ["current", "voltage", "resolution"]
        },
        "measurement_types": {
            "type": "array",
            "items": {
                "type": "string",
                "enum": [
                    "voltage_dc",
                    "voltage_ac",
                    "current_dc",
                    "current_ac",
                    "resistance",
                    "capacitance",
                    "frequency",
                    "temperature",
                    "continuity",
                    "diode"
                ]
            },
            "description": "Measurement types supported by this multimeter"
        },
        "accuracy": {
            "type": "object",
            "patternProperties": {
                "^[a-z_]+$": {
                    "type": "object",
                    "properties": {
                        "percentage": {
                            "type": "number"
                        },
                        "absolute": {
                            "type": "number"
                        }
                    },
                    "required": ["percentage", "absolute"]
                }
            },
            "description": "Measurement accuracy specifications for different measurement types"
        }
    },
    "required": [
        "manufacturer",
        "model",
        "device_type",
        "resolution",
        "max_voltage",
        "max_resistance",
        "max_current",
        "max_capacitance",
        "max_frequency",
        "configuration"
    ]
}