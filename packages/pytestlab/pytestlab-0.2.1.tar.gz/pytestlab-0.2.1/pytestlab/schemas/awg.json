{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "WaveformGeneratorConfig",
    "type": "object",
    "properties": {
        "manufacturer": {
            "type": "string"
        },
        "model": {
            "type": "string"
        },
        "device_type": {
            "type": "string",
            "enum": [
                "waveform_generator"
            ]
        },
        "serial_number": {
            "type": "string"
        },
        "channels": {
            "type": "array",
            "items": {
                "type": "object",
                "patternProperties": {
                    "^[0-9]+$": {
                        "type": "object",
                        "properties": {
                            "description": {
                                "type": "string"
                            },
                            "frequency": {
                                "type": "object",
                                "properties": {
                                    "min_val": {
                                        "type": "number"
                                    },
                                    "max_val": {
                                        "type": "number"
                                    }
                                },
                                "required": [
                                    "min_val",
                                    "max_val"
                                ]
                            },
                            "amplitude": {
                                "type": "object",
                                "properties": {
                                    "min_val": {
                                        "type": "number"
                                    },
                                    "max_val": {
                                        "type": "number"
                                    }
                                },
                                "required": [
                                    "min_val",
                                    "max_val"
                                ]
                            },
                            "dc_offset": {
                                "type": "object",
                                "properties": {
                                    "min_val": {
                                        "type": "number"
                                    },
                                    "max_val": {
                                        "type": "number"
                                    }
                                },
                                "required": [
                                    "min_val",
                                    "max_val"
                                ]
                            },
                            "accuracy": {
                                "type": "object",
                                "properties": {
                                    "amplitude": {
                                        "type": "number"
                                    },
                                    "frequency": {
                                        "type": "number"
                                    }
                                },
                                "required": [
                                    "amplitude",
                                    "frequency"
                                ]
                            }
                        },
                        "required": [
                            "description",
                            "frequency",
                            "amplitude",
                            "dc_offset",
                            "accuracy"
                        ]
                    }
                },
                "minProperties": 1
            }
        },
        "waveforms": {
            "type": "object",
            "properties": {
                "built_in": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "arbitrary": {
                    "type": "object",
                    "properties": {
                        "memory": {
                            "type": "number",
                            "description": "Total memory size in points"
                        },
                        "max_length": {
                            "type": "number",
                            "description": "Maximum waveform length in points"
                        },
                        "sampling_rate": {
                            "type": "object",
                            "properties": {
                                "min_val": {
                                    "type": "number"
                                },
                                "max_val": {
                                    "type": "number"
                                }
                            },
                            "required": [
                                "min_val",
                                "max_val"
                            ]
                        },
                        "resolution": {
                            "type": "integer",
                            "description": "Bit resolution for arbitrary waveforms"
                        }
                    },
                    "required": [
                        "memory",
                        "max_length",
                        "sampling_rate",
                        "resolution"
                    ]
                }
            },
            "required": [
                "built_in",
                "arbitrary"
            ]
        }
    },
    "required": [
        "manufacturer",
        "model",
        "device_type",
        "channels",
        "waveforms"
    ]
}