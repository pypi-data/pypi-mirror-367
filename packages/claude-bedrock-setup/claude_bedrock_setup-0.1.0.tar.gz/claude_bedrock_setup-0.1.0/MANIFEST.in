# Include essential project files
include README.md
include LICENSE
include CHANGELOG.md
include pyproject.toml
include setup.py
include requirements.txt

# Include configuration files
include pytest.ini
include Makefile
include .gitignore

# Include source code and type information
recursive-include src *.py
recursive-include src *.pyi
include src/claude_setup/py.typed

# Include tests
recursive-include tests *.py
recursive-include tests *.json
recursive-include tests *.yaml
recursive-include tests *.yml

# Include documentation
recursive-include docs *.md
recursive-include docs *.rst
recursive-include docs *.txt

# Exclude development and build artifacts
exclude .DS_Store
exclude *.pyc
exclude *.pyo
exclude *.pyd
exclude __pycache__
exclude .pytest_cache
exclude .mypy_cache
exclude .coverage
exclude htmlcov
exclude .tox
exclude .venv
exclude venv
exclude env
exclude ENV
exclude .env

# Exclude version control
exclude .git
exclude .gitignore
exclude .gitattributes

# Exclude IDE files
exclude .vscode
exclude .idea
exclude *.swp
exclude *.swo
exclude *~

# Exclude build directories
exclude build
exclude dist
exclude *.egg-info

# Exclude CI/CD files
exclude .github
exclude .travis.yml
exclude .appveyor.yml
exclude azure-pipelines.yml

# Exclude other development files
exclude tox.ini
exclude .pre-commit-config.yaml