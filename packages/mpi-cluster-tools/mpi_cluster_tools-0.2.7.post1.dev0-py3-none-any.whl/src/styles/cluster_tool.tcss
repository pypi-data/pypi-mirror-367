/* HTCondor Cluster Tools Styling */

Screen {
    background: $background;
}

Header {
    height: 2;
    background: $primary;
    color: $text;
    content-align: left middle;
}

Footer {
    height: 2;
    background: $primary;
    color: $text;
}

.container {
    border: round $border;
    padding: 1;
    margin: 1;
}

#sidebar {
    width: 30%;
    min-width: 40;
    background: $surface;
    border-right: solid $border;
}

#main-content {
    width: 1fr;
    height: 1fr;
}

/* HTCondor Job List Styling */
.job-list-header {
    height: 2;
    content-align: left middle;
    text-style: bold;
    color: $text;
    border-bottom: solid $border;
    background: transparent;
}

.job-section-header {
    margin: 1 0;
}

.job-section-header .section-title {
    content-align: left middle;
    text-style: bold;
    color: $accent;
    padding-left: 1;
}

#job-list {
    height: 1fr;
    background: transparent;
    border: round transparent;
}

.job-item {
    height: 8;
    padding: 1;
    border: round $border;
}

ListItem:hover {
    background: $surface-lighten-1;
}

ListItem.job-item-selected {
    background: $primary;
}

ListItem.job-item-selected .job-main-info {
    color: $text;
}

ListItem.job-item-selected .job-resource-info {
    color: $text-muted;
}

.job-line-1 {
    width: 1fr;
    margin-bottom: 1;
}

.job-line-2 {
    width: 1fr;
}

.status-indicator {
    width: auto;
    margin-right: 1;
    content-align: left middle;
}

.job-main-info {
    width: 1fr;
    content-align: left middle;
    color: $text;
    text-style: bold;
}

.job-resource-info {
    width: 1fr;
    content-align: left middle;
    color: $text-muted;
    text-style: none;
    margin-left: 1;
}

/* Job File Viewer Styling */
.file-viewer {
    height: 1fr;
    margin: 1;
    border: round $border;
}

/* Job status colors */
.status-running {
    color: $success;
}

.status-idle {
    color: $warning;
}

.status-completed {
    color: $accent;
}

.status-held {
    color: $error;
}

.status-removed {
    color: $error;
}

.status-transferring {
    color: $accent;
}

.status-suspended {
    color: $warning;
}

.status-unexpanded {
    color: $text-muted;
}

/* File Viewer Styling */
.file-viewer {
    height: 1fr;
    margin: 1;
    border: solid $border;
    background: $surface;
}

.file-viewer-header {
    height: 2;
    background: $primary;
    color: $text;
    content-align: left middle;
    text-style: bold;
    padding-left: 1;
}

.file-content {
    height: 1fr;
    background: $background;
    color: $text;
    scrollbar-background: $surface;
    scrollbar-color: $accent;
}

/* Focus states - red borders for focused containers */
.focus-container:focus {
    border: round red !important;
}

/* Color Scheme - Dark theme similar to the screenshot */
$background: #1e1e1e;
$surface: #2d2d2d;
$surface-lighten-1: #3d3d3d;
$primary:rgb(176, 49, 172);
$accent: #14a085;
$success: #28a745;
$success-darken-1: #1e7e34;
$warning: #ffc107;
$error: #dc3545;
$text: #ffffff;
$text-muted: #888888;
$border: #404040;

/* Confirmation dialog styles */
ConfirmCancelScreen {
    align: center middle;
}

#dialog {
    width: 50;
    height: 9;
    border: round $error;
    padding: 1 2;
}

#question {
    height: 3;
    content-align: center middle;
    text-align: center;
    margin-bottom: 1;
    color: $text-muted;
}