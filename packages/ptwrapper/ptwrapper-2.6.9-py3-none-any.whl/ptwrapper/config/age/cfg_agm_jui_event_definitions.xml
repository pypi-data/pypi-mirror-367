<!-- Definition of the toplevel node -->
<eventDefinition>

   <event name="+X Panel Illumination" type="PANEL_ILLUMINATION">
      <panelType> +x </panelType>
	  <minValue> 0 </minValue>
	  <maxValue> 90 </maxValue>
   </event>

   <event name="+Z Panel Illumination" type="PANEL_ILLUMINATION">
      <panelType> +z </panelType>
	  <minValue> 0 </minValue>
	  <maxValue> 90 </maxValue>
   </event>

    <event name="JANUS Sun Exclusion without Cover" type="ANGULAR_DISTANCE">
        <maxValue> 5.0 </maxValue>
        <boresight ref="JANUS_boresight"/>
        <target ref="SC2Sun"/>
    </event>

</eventDefinition>