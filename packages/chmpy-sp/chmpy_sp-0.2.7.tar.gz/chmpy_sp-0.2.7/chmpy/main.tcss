    width: 100%;
}

#main_input_row {
    width: 100%;
    margin-bottom: 1;
}

#main_input_row > Input {
    width: 1fr;
}

#main_input_row > Button {
    width: auto;
    min-width: 10;
    margin-right: 1;
}

#settings_row {
    width: 100%;
    height: auto;
    margin-top: 1;
}

.settings_group {
    width: 1fr;
    margin-right: 1;
}

.settings_group:last-child {
    margin-right: 0;
}

.settings_label {
    text-style: bold;
    margin-bottom: 1;
    color: $text-muted;
}

#settings_row Input {
    width: 100%;
}

Input.-valid {
    border: tall $success 60%;
}

Input.-valid:focus {
    border: tall $success;
}

Input.-invalid {
    border: tall $error 60%;
}

Input.-invalid:focus {
    border: tall $error;
}

Input.-invalid {
    border-subtitle-style: italic;
    border-subtitle-color: $error;
}

#title_container {
  align: left top;
  # border: rgba(0,0,0,0) ;
  padding-bottom: -2;
}

#description_container {
  align: left bottom;
  height: 5.5;
  padding-left: 5;
}

#help_screen {
  align: center middle;
  height: auto;
  width: auto;
  border: rgba(0, 0, 0, 1);
  border-title-color: rgba(182, 189, 81, 1);
  border-subtitle-color: rgba(135, 135, 135, 1);
}