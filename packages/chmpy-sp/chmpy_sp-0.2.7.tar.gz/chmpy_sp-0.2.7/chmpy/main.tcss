# list styling
SelectionList {
  padding: 1;
  border: round $panel;
  margin: 1 0;
}

Horizontal {
  height: auto;
  align: center middle; 
  margin: 1 0;
}

#tree_model > Button {
  margin: 0 0 1 0;
  width: 1fr;
  text-align: center;
}


# Button styling

Button {
  width: auto;
  min-width: 10;
  margin: 1 1 0 1;
  # border: none; 
}

Button:focus {
  border: round $accent;
}

#save_button, #save {
  # background: $success;
  # border: round $success-darken-2; 
}

#save_button:focus, #save:focus {
  background: $success-darken-1;
  border: $success-darken-2 !important; 
}



#error {
  # background: $success;
  # border: round $success-darken-2; /* Add base border */
}

#error:focus {
  background: $warning-darken-1;
  border: $warning-darken-2 !important; 
}

#container_butten_perm_list_button {
  align: left middle;
}


# treelist style

#treelist {
  border: rgba(195, 221, 230, 1);
  height: 1fr;
  # padding-top: -2;
}

