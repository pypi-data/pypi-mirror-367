    width: 100%;
}

#container_main_lauch_app_button_input > Input {
    width: 1fr;
}

#container_main_lauch_app_button_input > Button {
    width: auto;
    min-width: 10;
    margin-right: 1;
}

#settings_row {
    height: auto;
    margin-top: 1;
    align: center top;
}

.settings_group {
    width: 1fr;
