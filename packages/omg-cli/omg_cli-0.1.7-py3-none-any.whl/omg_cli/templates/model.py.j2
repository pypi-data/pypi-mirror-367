from odoo import models, fields

class {{ model.name | camelcase }}(models.Model):
    _name = '{{ model.name.lower().replace(' ', '.') }}'
    _description = '{{ model.description }}'

{% for field in model.fields %}
    {{ field.name }} = fields.{{ field.type }}(string='{{ field.string }}'{% if field.required %}, required=True{% endif %})
{% endfor %}
