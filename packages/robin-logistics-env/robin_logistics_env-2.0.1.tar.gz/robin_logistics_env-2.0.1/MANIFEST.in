# Include documentation files
include README.md
include CHANGELOG.md
include CONTRIBUTING.md
include LICENSE
include requirements.txt

# Include data files
recursive-include robin_logistics/data *.csv
recursive-include robin_logistics/templates *.html

# Include example files
recursive-include contestant_example *.py
recursive-include contestant_example *.txt
recursive-include contestant_example *.md

# Exclude development and testing files
exclude .gitignore
exclude .pre-commit-config.yaml
exclude pytest.ini
exclude .coverage
exclude tox.ini
recursive-exclude tests *
recursive-exclude docs *
recursive-exclude .git *
recursive-exclude __pycache__ *
recursive-exclude *.egg-info *

# Exclude temporary files
exclude *.tmp
exclude *.log
exclude .DS_Store
exclude Thumbs.db