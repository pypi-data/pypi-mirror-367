# nlp2sql Docker Environment Configuration
# Copy this file to .env and customize as needed

# PostgreSQL Version
POSTGRES_VERSION=16

# Simple Test Database Configuration
SIMPLE_CONTAINER_NAME=nlp2sql-postgres
SIMPLE_DB_USER=testuser
SIMPLE_DB_PASSWORD=testpass
SIMPLE_DB_NAME=testdb
SIMPLE_DB_PORT=5432

# Large Enterprise Database Configuration  
LARGE_CONTAINER_NAME=nlp2sql-postgres-large
LARGE_DB_USER=demo
LARGE_DB_PASSWORD=demo123
LARGE_DB_NAME=enterprise
LARGE_DB_PORT=5433

# Examples of customization:
# 
# For production-like testing:
# SIMPLE_DB_USER=postgres
# SIMPLE_DB_PASSWORD=secretpassword
# SIMPLE_DB_NAME=myapp_dev
#
# For different ports (if you have conflicts):
# SIMPLE_DB_PORT=15432
# LARGE_DB_PORT=15433
#
# For specific PostgreSQL versions:
# POSTGRES_VERSION=15
# POSTGRES_VERSION=14