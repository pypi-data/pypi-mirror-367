{
    "wstl": {
        "title": "HEA Server Activity Microservice",
        "actions": [
            {
                "name": "heaserver-activity-desktopobjectaction-open",
                "type": "safe",
                "target": "item",
                "prompt": "Open"
            },
            {
                "name": "heaserver-activity-desktopobjectaction-get-self",
                "description": "View this desktop object action",
                "type": "safe",
                "action": "read",
                "target": "item read cj",
                "prompt": "View"
            },
            {
                "name": "heaserver-activity-desktopobjectaction-get-old-object-uri",
                "type": "safe",
                "action": "read",
                "target": "item read cj",
                "prompt": "Get old object"
            },
            {
                "name": "heaserver-activity-recentlyaccessed-get-actual",
                "type": "safe",
                "action": "read",
                "target": "item read cj",
                "prompt": "Get actual"
            },
            {
                "name": "heaserver-activity-desktopobjectsummaries-get-actual",
                "type": "safe",
                "action": "read",
                "target": "item read cj",
                "prompt": "Get actual"
            },
            {
                "name": "heaserver-activity-desktopobjectaction-get-new-object-uri",
                "type": "safe",
                "action": "read",
                "target": "item read cj",
                "prompt": "Get new object"
            },
            {
                "name": "heaserver-activity-desktopobjectaction-get-properties",
                "description": "View and edit this desktop object action's properties",
                "type": "unsafe",
                "target": "item cj-template",
                "action": "update",
                "prompt": "Properties",
                "inputs": [
                    {
                        "name": "id",
                        "prompt": "Id",
                        "readOnly": true,
                        "hea": {
                            "display": false
                        }
                    },
                    {
                        "name": "display_name",
                        "prompt": "Name",
                        "required": true,
                        "readOnly": true
                    },
                    {
                        "name": "description",
                        "prompt": "Description",
                        "type": "textarea",
                        "readOnly": true
                    },
                    {
                        "name": "user_id",
                        "prompt": "User",
                        "required": true,
                        "readOnly": true,
                        "type": "select",
                        "hea": {
                            "optionsFromUrl": {
                                "path": "people/",
                                "value": "id",
                                "text": "display_name"
                            }
                        }
                    },
                    {
                        "name": "began",
                        "prompt": "Began",
                        "readOnly": true,
                        "hea": {
                            "type": "datetime"
                        }
                    },
                    {
                        "name": "ended",
                        "prompt": "Ended",
                        "readOnly": true,
                        "hea": {
                            "type": "datetime"
                        }
                    },
                    {
                        "name": "duration",
                        "prompt": "Duration in seconds",
                        "readOnly": true,
                        "hea": {
                            "type": "datetime"
                        }
                    },
                    {
                        "name": "human_readable_duration",
                        "prompt": "Duration",
                        "readOnly": true

                    },
                    {
                        "name": "status",
                        "prompt": "Status",
                        "type": "select",
                        "readOnly": true,
                        "suggest": [
                            {"value":  "REQUESTED", "text":  "Requested"},
                            {"value":  "IN_PROGRESS", "text":  "In progress"},
                            {"value":  "COMPLETED", "text":  "Completed"},
                            {"value":  "FAILED", "text":  "Failed"}
                        ]
                    },
                    {
                        "name": "owner",
                        "prompt": "Owner",
                        "required": true,
                        "type": "select",
                        "hea": {
                            "optionsFromUrl": {
                                "path": "people/",
                                "value": "id",
                                "text": "display_name"
                            }
                        },
                        "readOnly": true
                    },
                    {
                        "name": "created",
                        "prompt": "Created",
                        "readOnly": true,
                        "hea": {
                            "type": "datetime"
                        }
                    },
                    {
                        "name": "modified",
                        "prompt": "Modified",
                        "readOnly": true,
                        "hea": {
                            "type": "datetime"
                        }
                    },
                    {
                        "name": "source",
                        "prompt": "Source",
                        "readOnly": true
                    },
                    {
                        "hea": {
                            "section": "user_shares",
                            "sectionPrompt": "User permissions",
                            "optionsFromUrl": {
                                "path": "people/",
                                "value": "id",
                                "text": "display_name"
                            }
                        },
                        "name": "user",
                        "prompt": "User",
                        "required": true,
                        "type": "select",
                        "readOnly": true
                    },
                    {
                        "hea": {
                            "section": "user_shares",
                            "cardinality": "multiple"
                        },
                        "name": "permissions",
                        "prompt": "Permissions",
                        "type": "select",
                        "suggest": [
                            {"value":  "COOWNER", "text":  "Co-owner"},
                            {"value":  "CREATOR", "text":  "Creator"},
                            {"value":  "DELETER", "text":  "Deleter"},
                            {"value":  "EDITOR", "text":  "Editor"},
                            {"value":  "SHARER", "text":  "Sharer"},
                            {"value":  "VIEWER", "text":  "Viewer"}
                        ],
                        "readOnly": true
                    },
                    {
                        "hea": {
                            "section": "group_shares",
                            "sectionPrompt": "Group permissions",
                            "optionsFromUrl": {
                                "path": "groups/",
                                "value": "id",
                                "text": "display_name"
                            }
                        },
                        "name": "group",
                        "prompt": "Group",
                        "required": true,
                        "type": "select",
                        "readOnly": true
                    },
                    {
                        "hea": {
                            "section": "group_shares",
                            "cardinality": "multiple"
                        },
                        "name": "permissions",
                        "prompt": "Permissions",
                        "type": "select",
                        "suggest": [
                            {"value":  "COOWNER", "text":  "Co-owner"},
                            {"value":  "CREATOR", "text":  "Creator"},
                            {"value":  "DELETER", "text":  "Deleter"},
                            {"value":  "EDITOR", "text":  "Editor"},
                            {"value":  "SHARER", "text":  "Sharer"},
                            {"value":  "VIEWER", "text":  "Viewer"}
                        ],
                        "readOnly": true
                    }
                ]
            }
        ]
    }
}
