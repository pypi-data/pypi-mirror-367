<odoo>
<record id="git_user_view_search" model="ir.ui.view">
    <field name="name">git_user - search</field>
    <field name="model">git_user</field>
    <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_search"
        />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data />
    </field>
</record>

<record id="git_user_view_tree" model="ir.ui.view">
    <field name="name">git_user -tree</field>
    <field name="model">git_user</field>
    <field name="inherit_id" ref="ssi_master_data_mixin.mixin_master_data_view_tree" />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data>
        </data>
    </field>
</record>

<record id="git_user_view_form" model="ir.ui.view">
    <field name="name">git_user - form</field>
    <field name="model">git_user</field>
    <field name="inherit_id" ref="ssi_master_data_mixin.mixin_master_data_view_form" />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='active']" position="after">
                <field name="git_username" />
                <field name="git_token" password="true" />
            </xpath>
        </data>
    </field>
</record>

<record id="git_user_action" model="ir.actions.act_window">
    <field name="name">Users</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">git_user</field>
    <field name="view_mode">tree,form</field>
</record>

<menuitem
        id="git_user_menu"
        name="Users"
        parent="menu_git_configuration"
        action="git_user_action"
        groups="git_user_group"
        sequence="110"
    />

</odoo>
