<odoo>
<record id="git_repo_type_view_search" model="ir.ui.view">
    <field name="name">git_repo_type - search</field>
    <field name="model">git_repo_type</field>
    <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_search"
        />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data />
    </field>
</record>

<record id="git_repo_type_view_tree" model="ir.ui.view">
    <field name="name">git_repo_type -tree</field>
    <field name="model">git_repo_type</field>
    <field name="inherit_id" ref="ssi_master_data_mixin.mixin_master_data_view_tree" />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data>
        </data>
    </field>
</record>

<record id="git_repo_type_view_form" model="ir.ui.view">
    <field name="name">git_repo_type - form</field>
    <field name="model">git_repo_type</field>
    <field name="inherit_id" ref="ssi_master_data_mixin.mixin_master_data_view_form" />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='active']" position="after">
                <field name="can_cloning" widget="boolean_toggle" />
                <field name="repo_type" />
            </xpath>
        </data>
    </field>
</record>

<record id="git_repo_type_action" model="ir.actions.act_window">
    <field name="name">Repo Types</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">git_repo_type</field>
    <field name="view_mode">tree,form</field>
</record>

<menuitem
        id="git_repo_type_menu"
        name="Repo Types"
        parent="menu_git_configuration"
        action="git_repo_type_action"
        groups="git_repo_type_group"
        sequence="110"
    />

</odoo>
