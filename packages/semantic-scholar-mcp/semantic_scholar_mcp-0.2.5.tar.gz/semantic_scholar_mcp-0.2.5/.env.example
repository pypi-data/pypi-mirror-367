# Environment configuration
ENVIRONMENT=development

# Semantic Scholar API (optional - works without key but with lower rate limits)
SEMANTIC_SCHOLAR_API_KEY=

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Cache settings
CACHE__ENABLED=true
CACHE__TTL_SECONDS=3600
CACHE__BACKEND=memory

# Rate limiting
RATE_LIMIT__ENABLED=true
RATE_LIMIT__REQUESTS_PER_SECOND=1.0
RATE_LIMIT__BURST_SIZE=10

# Circuit breaker
CIRCUIT_BREAKER__ENABLED=true
CIRCUIT_BREAKER__FAILURE_THRESHOLD=5
CIRCUIT_BREAKER__RECOVERY_TIMEOUT=60.0

# Metrics
METRICS__ENABLED=true
METRICS__BACKEND=memory