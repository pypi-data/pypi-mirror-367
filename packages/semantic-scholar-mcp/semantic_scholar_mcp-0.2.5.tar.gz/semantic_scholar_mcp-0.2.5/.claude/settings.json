{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ruff . --fix & uv run mypy ."
          }
        ]
      }
    ]
  },
  
  "project": {
    "name": "Semantic Scholar MCP",
    "type": "python-mcp",
    "root": "/mnt/ext-hdd1/yoshioka/github/semantic-scholar-mcp",
    "python_version": "3.10",
    "package_manager": "uv"
  },
  
  "development": {
    "auto_format": true,
    "lint_on_save": true,
    "test_command": "uv run pytest",
    "build_command": "uv build",
    "run_command": "uv run python -m semantic_scholar_mcp"
  },
  
  "mcp": {
    "server_file": "scripts/server_standalone.py",
    "inspector_command": "uv run mcp dev scripts/server_standalone.py",
    "test_file": "test_simple_search.py"
  }
}