# Include package data for WorkFrame
include README.md
include LICENSE
include pyproject.toml
include requirements*.txt

# Include templates
recursive-include workframe/templates *.html

# Include static files  
recursive-include workframe/static *.css
recursive-include workframe/static *.js
recursive-include workframe/static *.png
recursive-include workframe/static *.jpg
recursive-include workframe/static *.gif
recursive-include workframe/static *.ico

# Exclude development and cache files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.orig
global-exclude *.rej
global-exclude *~
global-exclude __pycache__
global-exclude .git*
global-exclude .DS_Store
recursive-exclude * __pycache__
recursive-exclude * *.py[co]